{
	"name": "@app/root",
	"private": true,
	"type": "module",
	"workspaces": ["services/*"],
	"scripts": {
		"dev:users": "bun --filter @app/users dev",
		"dev:wallet": "bun --filter @app/wallet dev",
		"dev": "bun --filter @app/users dev & bun --filter @app/wallet dev",
		"migrate": "docker compose run --rm users-migrate && docker compose run --rm wallet-migrate",
		"up": "docker compose up -d --build users-migrate wallet-migrate users wallet users-worker wallet-worker rabbitmq users-db wallet-db docs",
		"up:docs": "npm run up",
		"down": "docker compose down --remove-orphans",
		"test": "bun --filter './services/*' test",
		"typecheck": "bun --filter './services/*' typecheck",
		"lint": "biome check .",
		"fmt": "biome format --write .",
		"release": "standard-version"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"bun-types": "^1.3.5",
		"standard-version": "^9.5.0",
		"typescript": "^5.9.3"
	}
}
